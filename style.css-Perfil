@import url('https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;700&display=swap');
*{
  box-sizing:border-box;
  text-align: center;
  justify-content: center;
}
body{
  margin: 0;
  font-family: 'Noto Sans', sans-serif;
  background-color: #121212;
  color: #FFF;
}
.border{
  border: 1px solid red;
}
h1{
  color: #00ff88;
  font-weight: 800;
  
  width: 100%;
  margin-top: 0px;
  background-color: #2f2841;
  text-align: left;
}
.foto{
  text-align: center;
  width: 100px;
  height: 100px;
  border-radius: 50%;
  object-fit: cover;
}
h2{
  color: #00ff88;
  font-weight: 800;
  margin: 0;
}
.informações{
  margin-left: 25%;
  margin-right: 25%;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 30px 35px;
  background-color: #2f2841;
  border-radius: 20px;
  box-shadow: 0px 10px 40px #00000056;
}
